import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.Date;
import java.util.Scanner;

/**
 * @author James & Kris
 *
 */
public class Parser {
	public static void main(String[] args) {
		Date d = new Date();
		String thisLine, time, team1Name, team2Name, score, date;
		Scanner fileScanner, lineScanner;
		File source = new File("/users/level3/1007175s/Sports-Elimination-TP3/src/uk/ac/gla/dcs/tp3/w/parser/src/baseballSource.txt");
		try {
			fileScanner = new Scanner(source);				//scan over file object
			while(fileScanner.hasNextLine() || fileScanner.nextLine().isEmpty()){
				if(fileScanner.nextLine().isEmpty()){
					date = fileScanner.nextLine();
					lineScanner = new Scanner(date);
					d.setDate(lineScanner.nextInt());
					d.setMonth(getMonth(lineScanner.next()));
					d.setYear(lineScanner.nextInt());
					
					System.out.println(d.toString());
				}
				thisLine = fileScanner.nextLine();			//get each line one at a time
				System.out.println(thisLine);
				lineScanner = new Scanner(thisLine);		//start new scanner to scan particular line
				//System.out.println(time);
			}
		} catch (FileNotFoundException e){
			System.out.println("Wrong filename");
		}
	}
	
	public static int getMonth(String month){
		if(month == "Jan"){
			return 1;
		}else if(month == "Feb"){
			return 2;
		}else if(month == "Mar"){
			return 3;
		}else if(month == "Apr"){
			return 4;
		}else if(month == "May"){
			return 5;
		}else if(month == "Jun"){
			return 6;
		}else if(month == "Jul"){
			return 7;
		}else if(month == "Aug"){
			return 8;
		}else if(month == "Sep"){
			return 9;
		}else if(month == "Oct"){
			return 10;
		}else if(month == "Nov"){
			return 11;
		}else if(month == "Dec"){
			return 12;
		}
		return 0; //doesn't get here
	}

}
